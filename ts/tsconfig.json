{
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "isolatedModules": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  }
}
